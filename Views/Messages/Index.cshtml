@model IEnumerable<TestApp6.Models.Message>

@{
    ViewBag.Title = "Chatterbugs!!";
}

 <div id="messageBody">
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New Chat", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Posts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Posts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser)
        </td>
         <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PostID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PostID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PostID })
        </td>
    </tr>
}

</table>
 </div>